<tr id="payment_<%= payment.id %>" class="row_payments">
    <td class="align-middle"><button class="btn btn-light btn-sm" data-toggle="modal" data-target="#<%= payment.id.to_words.delete(' ') %>"> #<%= payment.id %></button></td>
    <td class="align-middle"><button class="btn btn-light btn-sm" data-toggle="modal" data-target="#<%= payment.id.to_words.delete(' ') %>"><%= payment.deudor %></button></td>
    <td class="align-middle"><%= payment.created_at.strftime("%d-%m-%Y") %></td>
    <td class="align-middle"><%= payment.numfact %></td>
    <td class="align-middle"><%= payment.pay %>%</td>
    <td class="align-middle"><%= number_with_delimiter(payment.monto_total, :delimiter => '.') %></td>
    
    <td class="align-middle">
      <% if payment.estado === "Procesando" %>
        <div class="btn btn-warning btn-sm text-light">
          <%= payment.estado %>
        </div>
      <% elsif payment.estado === "Aprobado" %>
        <div class="btn btn-success btn-sm">
          <%= payment.estado %>
        </div>
      <% else %>
        <div class="btn btn-danger btn-sm">
          <%= payment.estado %>
        </div>
    <% end %>
    </td>
    <td class="align-middle">
      <div class="dropdown">
          
          <button class="btn btn-light" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-three-dots-vertical" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
            </svg>
        </button>
          <div class="dropdown-menu">
            <%= link_to 'Modificar', edit_payment_path(payment), html_options = {class: "dropdown-item", data_target: "#modificarModel", data_toggle: "modal", remote: true} %>
              <%= link_to 'Eliminar', payment, remote: true, method: :delete, data: { confirm: "Estás seguro de eliminar el anticipo de #{payment.deudor}?" }, class: "dropdown-item" %>
          </div>
        </div>
    </td>
</tr>

<div class="modal fade" id="<%= payment.id.to_words.delete(' ') %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Estado de Solicitud #<%= payment.id %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="pay_<%= payment.id %>" class="card <% if payment.estado === 'Procesando' %> border-warning
          <% elsif payment.estado === 'Aprobado' %>
          border-success
          <% else %>
          border-danger
          <% end %> shadow-sm mb-3 py-3">
          <div class="card-body text-primary">
              <h6 class="text-dark text-justify">
              <ul class="list-group justify-content-center align-items-center">
                  <li class="list-group-item mx-3">
                  Estado: <span class="badge <% if payment.estado === 'Procesando' %>
                      badge-warning
                      <% elsif payment.estado === 'Aprobado' %>
                      badge-success
                      <% else %>
                      badge-danger
                      <% end %>"><%= payment.estado %></span>
                  </li>
                  <li class="list-group-item mx-3">
                  Fecha: <%= payment.created_at.strftime("%d-%m-%Y")%>
                  </li>
                  <li class="list-group-item mx-3">
                  Número de Facturas: <%= payment.numfact %>
                  </li>
                  <li class="list-group-item mx-3">
                  Monto de Facturas: <%= number_with_delimiter(payment.monto_total, :delimiter => '.')%>
                  </li>
                  <li class="list-group-item mx-3">
                  <button class="btn btn-primary btn-sm">Chat con Ejecutivo</button>
                  </li>
                  <li class="list-group-item mx-3">
                  <button class="btn btn-outline-primary btn-sm">Ver Detalles</button>
                  </li>
              </ul>
              </h6>
              </div>
          </div>
      </div>
     
    </div>
  </div>
</div>